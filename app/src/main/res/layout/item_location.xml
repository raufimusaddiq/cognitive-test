<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:elevation="0.8dp">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="4dp">

        <TextView
                android:text="Location"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"/>

        <TextView
                android:text="latitude : -7.3123"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/location_latitude_values"/>
        <TextView
                android:text="longitude : 110.000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/location_longitude_values"/>
        <TextView
                android:text="accuracy : 2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/location_accuracy_values"/>

    </LinearLayout>
</android.support.v7.widget.CardView>