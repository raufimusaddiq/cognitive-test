<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:elevation="0.8dp">
    <LinearLayout
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="HRM Sensor raw data" android:textStyle="bold"/>
        <TextView
                android:id="@+id/hrm_ir_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#990033"
                android:text="" />
        <TextView
                android:id="@+id/hrm_red_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#990033"
                android:text="" />

        <TextView
                android:id="@+id/hrm_green_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#990033"
                android:text="" />

        <TextView
                android:id="@+id/hrm_blue_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#990033"
                android:text="" />
        <Button android:layout_width="wrap_content"
                android:onClick="onClickedGraphButton"
                android:layout_height="wrap_content" android:text="graph"/>

    </LinearLayout>
</android.support.v7.widget.CardView>