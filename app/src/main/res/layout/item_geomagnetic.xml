<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:elevation="0.8dp">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="4dp">

        <TextView
                android:text="Geomagnetic"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"/>

        <TextView
                android:text="x=-1.311"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/geomagnetic_x_values"/>

        <TextView
                android:text="y=-1.311"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/geomagnetic_y_values"/>

        <TextView
                android:text="z=-1.311"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/geomagnetic_z_values"/>

    </LinearLayout>
</android.support.v7.widget.CardView>